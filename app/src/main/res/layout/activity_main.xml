<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_calorie_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your daily calorie goal"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_calories_consumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter calories consumed"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_add_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Add" />

    <TextView
        android:id="@+id/tv_calories_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Calories remaining: "
        android:textSize="18sp" />

</LinearLayout>
